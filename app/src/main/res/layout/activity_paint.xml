<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="标题"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:background="@color/white"
            />

        <com.michael.notedemo.paint.PaintView
            android:id="@+id/paint_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="1dp"
            android:background="#CCCCCC">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"

                >
                <ImageButton
                    android:id="@+id/show_hide_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_keyboard_arrow_up_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
                <ImageButton
                    android:id="@+id/pensize_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_create_white_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
                <ImageButton
                    android:id="@+id/pencolor_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_colorize_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit">
                </ImageButton>
                <ImageButton
                    android:id="@+id/eraser_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_layers_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
                <ImageButton
                    android:id="@+id/undo_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_keyboard_arrow_left_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
                <ImageButton
                    android:id="@+id/redo_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_keyboard_arrow_right_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
                <ImageButton
                    android:id="@+id/clear_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_clear_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
                <ImageButton
                    android:id="@+id/save_paint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_save_blue_grey_600_24dp"
                    android:background="@drawable/touch_background_unlimit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/colorSelectView"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/second_floor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />
    </LinearLayout>
</RelativeLayout>