<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michael.notedemo.MainActivity">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/add_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="新建笔记..."
            android:textSize="14sp"
            android:textColor="#607D8B"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/add_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_button_background"
            android:src="@drawable/ic_format_list_bulleted_blue_grey_500_24dp"/>
        <ImageButton
            android:id="@+id/add_paint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_button_background"
            android:src="@drawable/ic_color_lens_blue_grey_500_24dp"/>
        <ImageButton
            android:id="@+id/add_project"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_button_background"
            android:src="@drawable/ic_group_work_blue_grey_500_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:background="@color/white"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/selectAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全选"
            android:textColor="#ffc107"
            android:background="@drawable/touch_background"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGrey"/>
        <Button
            android:id="@+id/deleteItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textColor="#ff0000"
            android:background="@drawable/touch_background"/>
    </LinearLayout>

    <include layout="@layout/activity_toolbar" />
</FrameLayout>
